<% layout("/layouts/boilerplate") %>
<body>
   
    <form action="/listings" method="post" class="needs-validation"  novalidate >
        <div class="row mt-3 offset-3">
            <div class="col-md-8">
        <input type="text" name="listing[title]" id="" placeholder="Enter title" class="form-control" required><br>
        <input type="text" name="listing[description]" id="" placeholder="Enter description" class="form-control" required><br>
        <input type="text" name="listing[filename]" id="" placeholder="Enter filename" class="form-control" required><br>
        <input type="text" name="listing[url]" id="" placeholder="enter Image url" class="form-control"><br>
        <div class="row">
            <div class="col-md-4">
        <input type="number" name="listing[price]" id="" placeholder="Enter price:" class="form-control" required><br>
            </div>
            <div class="col-md-8">
        <input type="text" name="listing[location]" id="" placeholder="Enter location" class="form-control" required><br>
            </div>
        </div>
        <input type="text" name="listing[country]" id="" placeholder="Enter country" class="form-control" required><br>
        <button class="btn btn-update mb-3">Submit</button>
            </div>
        </div>
    </form>
</body>
